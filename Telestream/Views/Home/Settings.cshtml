@model SettingViewModel
@{
    ViewData["Title"] = "Settings";
}

@section Breadcrumbs
{
    <div class="col-lg-6 col-7">
        <h6 class="h2 text-white d-inline-block mb-0">Settings</h6>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card p-3">
            <form>
                <div class="form-group mb-3">
                    <label for="api-key-input">API  Key</label>
                    <input id="api-key-input" class="form-control" value="@Model.apiKey">
                </div>
                <div class="form-group mb-3">
                    <label for="webhook-input">Webhook Url</label>
                    <input id="webhook-input" class="form-control" value="@Model.webhookUrl">
                </div>
                <div class="mb-3 phone-group">
                    <div class="row">
                        <div class="col-auto">
                            <label for="phone-input">Phone#</label>
                            <small class="text-muted">(Valid Format - +1 xxx xxx xxxx)</small>
                        </div>
                        <div class="col-auto ml-auto">
                            <button type="button" class="btn btn-primary text-upper add-phone">
                                <i class="fa-solid fa-plus"></i>Add Phone #
                            </button>
                        </div>
                    </div>
                    @foreach (String phoneNumber in Model.phoneNumbers)
                    {
                        <div class="row mt-1">
                            <div class="col">
                                <input class="phone-input form-control" value="@phoneNumber" placeholder="+1 234 567 8901">
                            </div>
                            <div class="col-auto">
                                <button type="button" class="btn btn-danger delete-phone" title="Delete Phone Number">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
                <button type="button" class="btn btn-primary" onclick="saveSettings()">Save</button>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/settings.js" asp-append-version="true"></script>   
}
